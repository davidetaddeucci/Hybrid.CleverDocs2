<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CleverDocs</title>
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="~/css/material-dashboard.css" rel="stylesheet" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="main-wrapper">
        <!-- Sidebar -->
        <nav class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-logo">
                    @if (!string.IsNullOrEmpty(ViewBag.LogoUrl?.ToString()))
                    {
                        <img src="@ViewBag.LogoUrl" alt="Company Logo" style="width: 100%; height: 100%; object-fit: contain; border-radius: 8px;" />
                    }
                    else
                    {
                        <i class="fas fa-brain"></i>
                    }
                </div>
                <div class="sidebar-brand">
                    <h4>CleverDocs</h4>
                    <div class="company-name">@ViewBag.CompanyName</div>
                    <div class="user-role">@ViewBag.UserRole</div>
                </div>
            </div>
            
            <div class="sidebar-nav">
                @await Html.PartialAsync("_Navigation")
            </div>
        </nav>

        <!-- Main Content -->
        <div class="main-content" id="mainContent">
            <!-- Header -->
            <header class="main-header">
                <div class="header-left">
                    <button class="sidebar-toggle" id="sidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    <h1 class="page-title">@ViewData["Title"]</h1>
                </div>
                
                <div class="header-right">
                    <!-- Theme Toggle -->
                    <button class="theme-toggle" data-tooltip="Toggle Theme">
                        <i class="fas fa-moon"></i>
                    </button>
                    
                    <!-- User Menu -->
                    <div class="user-menu">
                        <div class="user-avatar" data-tooltip="@ViewBag.UserName">
                            @if (!string.IsNullOrEmpty(ViewBag.UserName?.ToString()))
                            {
                                @ViewBag.UserName.ToString().Substring(0, 1).ToUpper()
                            }
                            else
                            {
                                <i class="fas fa-user"></i>
                            }
                        </div>
                    </div>
                </div>
            </header>

            <!-- Content Area -->
            <main class="content-area">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/material-dashboard.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>