{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Hybrid.CleverDocs2": "Debug"
    }
  },
  "AllowedHosts": "*",
  
  // Database Configuration
  "ConnectionStrings": {
    "Postgres": "Host=localhost;Port=5432;Database=cleverdocs;Username=postgres;Password=postgres;Include Error Detail=true"
  },
  
  // Redis Configuration
  "Redis": {
    "Configuration": "localhost:6380,password=your_redis_password,abortConnect=false",
    "InstanceName": "CleverDocs2",
    "DefaultDatabase": 0,
    "ConnectTimeout": 5000,
    "SyncTimeout": 5000
  },
  
  // RabbitMQ Configuration
  "RabbitMQ": {
    "Host": "localhost",
    "Port": 5674,
    "VirtualHost": "/",
    "Username": "your_rabbitmq_user",
    "Password": "your_strong_password",
    "ManagementPort": 15674,
    "Heartbeat": 60,
    "RequestedConnectionTimeout": 30000
  },
  
  // R2R API Configuration
  "R2R": {
    "ApiUrl": "http://localhost:7272",
    "ConfigPath": "/configs/full.toml",
    "DefaultTimeout": 30,
    "MaxRetries": 3,
    "ApiKey": "",
    "RetryDelayMs": 1000,
    "CircuitBreakerThreshold": 5,
    "CircuitBreakerDurationMs": 30000
  },
  
  // Health Checks Configuration
  "HealthChecks": {
    "Enabled": true,
    "TimeoutSeconds": 10,
    "Postgres": {
      "Enabled": true,
      "TimeoutSeconds": 5
    },
    "Redis": {
      "Enabled": true,
      "TimeoutSeconds": 5
    },
    "RabbitMQ": {
      "Enabled": false,
      "TimeoutSeconds": 5
    },
    "R2R": {
      "Enabled": true,
      "TimeoutSeconds": 10
    }
  },
  
  // JWT Configuration
  "Jwt": {
    "SecretKey": "your-super-secret-jwt-key-that-should-be-at-least-32-characters-long",
    "Issuer": "Hybrid.CleverDocs2.WebServices",
    "Audience": "Hybrid.CleverDocs2.Client",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  
  // CORS Configuration
  "Cors": {
    "AllowedOrigins": ["http://localhost:3000", "http://localhost:5000", "http://localhost:53532", "http://localhost:59805"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["*"],
    "AllowCredentials": true
  },
  
  // File Upload Configuration
  "FileUpload": {
    "MaxFileSizeBytes": 104857600,
    "AllowedExtensions": [".pdf", ".docx", ".txt", ".md", ".html", ".json", ".csv", ".xlsx"],
    "TempDirectory": "./temp",
    "StorageDirectory": "./storage"
  },
  
  // Background Services Configuration
  "BackgroundServices": {
    "IngestionWorker": {
      "Enabled": true,
      "IntervalSeconds": 30,
      "BatchSize": 10
    },
    "MaintenanceWorker": {
      "Enabled": true,
      "IntervalHours": 24,
      "CleanupTempFiles": true,
      "CleanupOldLogs": true
    }
  },
  
  // Monitoring Configuration
  "Monitoring": {
    "Metrics": {
      "Enabled": true,
      "Endpoint": "/metrics"
    },
    "Tracing": {
      "Enabled": true,
      "ServiceName": "Hybrid.CleverDocs2.WebServices"
    }
  }
}
